require "spec"
require "../src/*"

describe "<%-= to_capitalized(@json["exercise"].to_s) %>" do
    <%- @json["cases"].as_a.each do |cases| %>
        <%= status()%> "<%-= cases["description"] %>" do
            expected = <%= to_s_digged(cases["expected"]).gsub(/(",)|\[/,"\\0\n") %>
            <%= to_capitalized(@json["exercise"].to_s) %>.<%= cases["property"].to_s %>(<%= cases["input"]["startVerse"] %>, <%= cases["input"]["endVerse"] %>).should eq(expected)
        end
    <% end %>
end
