{%- assign first = true -%}
require "spec"
require "../src/*"

describe "{{- json.exercise_cammel -}}" do
{%- for cases in  json.cases -%}
        {%- for subcases in cases.cases %}
        {% include "./bin/extra-templates/generator_help", first: first %} "{{ subcases.description }}" do
            {% if subcases.input.item %}
            item = "{{ subcases.input.item }}"
            score = {{ subcases.input.score }}
        {{ json.exercise_cammel }}.{{ subcases.property | underscore }}(item, score).should eq({{ subcases.expected }})
            {% else %}
            score = {{ subcases.input.score }}
            expected = {{ subcases.expected }} of String
        {{ json.exercise_cammel }}.{{ subcases.property | underscore }}(score).should eq(expected)
            {% endif %}
    end
        {% endfor %}
{% endfor %}
end
