require "spec"
require "../src/*"

describe "<%-= to_capitalized(@json["exercise"].to_s) %>" do
<%- @json["cases"].as_a.each do |cases| %>
    <%- if cases["scenarios"]? %>
        <%= status()%> "<%-= cases["description"] %>", tags: "optional" do
    <%- else %>
        <%= status()%> "<%-= cases["description"] %>" do
    <%- end %>
        <%= to_capitalized(@json["exercise"].to_s) %>.find("<%= cases["input"]["subject"].to_s %>", <%= to_s_deep(cases["input"]["candidates"]) %>).should eq(<%= to_s_deep( cases["expected"]) %> of String)
    end
<% end %>
end
